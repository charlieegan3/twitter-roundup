<%= form_for @roundup do |f| %>
  <%= f.label "Accounts to monitor" %>:<br/>
  <%= f.text_area :monitored_accounts, cols: 30, rows: 15, placeholder: monitored_accounts_placeholder %><br/>

  <%= f.label :frequency %>:
  <%= f.select(:frequency, options_for_select(roundup_frequencies, selected: @roundup.frequency)) %><br/>

  <%= f.label "Webhook endpoint" %>:<br/>
  <%= f.text_field :webhook_endpoint, placeholder: 'https://requestb.in/.....' %><br/>

  <%= f.label "Email address" %>:<br/>
  <%= f.text_field :email_address, placeholder: 'account@domain.tld' %><br/>

  <%= f.submit %>
<% end %>
